<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <ListView
        android:id="@+id/filtersListView"
        android:layout_width="match_parent"
        android:layout_gravity="top|center_vertical"
        android:layout_height="63dp"
        />

    <ListView
        android:id="@+id/classListView"
        android:layout_width="match_parent"
        android:layout_height="419dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Start Fitness Agent"
        android:onClick="buttonListenOnClick"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/buttonListen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click to Speak"
        android:onClick="buttonListenOnClick"
        android:layout_alignParentTop="true"
        android:layout_gravity="bottom|right"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="407dp" />

    <TextView
        android:layout_width="254dp"
        android:layout_height="64dp"
        android:id="@+id/resultTextView"
        android:layout_gravity="bottom"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <TextView
        android:layout_width="254dp"
        android:layout_height="87dp"
        android:id="@+id/emptyResultsTextView"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"/>

</FrameLayout>

